###################
# Logging succeed #
###################

regex=sshd.+: Accepted (\S+) for root from (\S+) port (\d+)\s*(ssh2)?; \
 classification(0).name=SSH Remote root logging; \
 assessment.impact.severity=low; \
 assessment.impact.completion=succeeded; \
 assessment.impact.type=admin; \
 assessment.impact.description=Root logged in from $2:$3 using the $1 method; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 source(0).service.port=$3; \
 source(0).service.protocol=tcp; \
# target(0).node.address(0).category=ipv46-addr; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp; \
 last;

regex=sshd.+: Accepted (\S+) for (?!root)(\S+) from (\S+) port (\d+)\s*(ssh2)?; \
 classification(0).name=SSH Remote user logging; \
 assessment.impact.severity=low; \
 assessment.impact.completion=succeeded; \
 assessment.impact.type=user; \
 assessment.impact.description=User $2 logged in from $3:$4 using the $1 method; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$3; \
 source(0).service.port=$4; \
 source(0).service.protocol=tcp; \
# target(0).node.address(0).category=ipv46-addr; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

################
# Login failed #
################

regex=sshd.+: Failed (\S+) for root from ([\d\.]+) port (\d+)\s*(ssh2)?; \
 classification(0).name=SSH Remote root logging failed; \
 assessment.impact.severity=medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=admin; \
 assessment.impact.description=Someone tried to login as root from $2:$3 using the $1 method; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 source(0).service.port=$3; \
 source(0).service.protocol=tcp; \
# target(0).node.address(0).category=ipv4-addr; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

regex=sshd.+: Failed (\S+) for (?!root)(\S+) from ([\d\.]+) port (\d+)\s*(ssh2)?; \
 classification(0).name=SSH Remote user logging failed; \
 assessment.impact.severity=medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.description=Someone tried to login as $2 from $3:$4 using the $1 method; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$3; \
 source(0).service.port=$4; \
 source(0).service.protocol=tcp; \
# target(0).node.address(0).category=ipv4-addr; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

##############################################
# Invalid (not existing) user tried to login #
##############################################

regex=sshd.+: Illegal user (\S+) from (\S+); \
 classification(0).name=SSH Remote logging failed with an invalid user; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.description=Someone tried to login with the invalid user "$1" from $2; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

##################################################################################
# User listed in DenyGroups or DenyUsers (sshd_config directives) tried to login #
##################################################################################

regex=sshd.+: User (\S+) not allowed because .*listed in (\w+); \
 classification(0).name=SSH Remote logging failed with a denied user; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.description=User $1 failed to login because he is listed in $2; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

##################################################################
# Sshd did not receive the identification string from the client #
# (maybe a ssh server recognition)                               #
##################################################################

regex=sshd.+: Did not receive identification string from (\S+); \
 classification(0).name=SSH Server recognition; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=recon; \
 assessment.impact.description=$1 making probably a server recognition; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$1; \
 source(0).service.protocol=tcp; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;

#########################################################################
# Forbidden root logging                                                #
# (directive PermitRootLogin and keyword "no" or "forced-commands-only" #
# of the sshd_config file)                                              #
#########################################################################

regex=sshd.+: ROOT LOGIN REFUSED FROM (\w+); \
 classification(0).name=SSH Remote root logging forbidden; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=admin; \
 assessment.impact.description=Root tried to login while it is forbidden; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$1; \
 source(0).service.protocol=tcp; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp;
