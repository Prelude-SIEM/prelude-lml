#Jun 20 04:21:33 mail sendmail[28792]: ruleset=check_relay, arg1=c-67-181-100-174.client.comcast.net, arg2=67.181.100.174, relay=c-67-181-100-174.client.comcast.net [67.181.100.174], reject=550 5.7.1 Mail from 67.181.100.174 refused - see http://dsbl.org/
#Jun 22 09:01:52 mail sendmail[5475]: ruleset=check_relay, arg1=[61.102.237.129], arg2=61.102.237.129, relay=[61.102.237.129], reject=550 5.7.1 Mail from 61.102.237.129 refused - see http://dsbl.org/
regex=ruleset=check_relay, arg1=([\[\]\w\-\.]+), arg2=([\d\.]+), relay=.+reject=; \
 classification(0).name=Mail server relay access denied; \
 id=3700; \
 revision=1; \
 classification(0).origin=vendor-specific; \
 assessment.impact.completion=failed; \
 assessment.impact.type=other; \
 assessment.impact.severity=medium; \
 assessment.impact.description=$1 attempted to use mail server as relay; \
 source(0).user.category=os-device; \
 source(0).node.name=$1; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 target(0).service.protocol=tcp; \
 target(0).service.port=25; \
 last;

#Jun 22 09:23:54 mail sendmail: sendmail startup succeeded
#Jun 22 09:23:54 mail sendmail: sendmail shutdown succeeded
regex=regex=sendmail (startup|shudown) succeeded; \
 classification(0).name=Mail server $1 ; \
 id=3701; \
 revision=1; \
 classification(0).origin=vendor-specific; \
 assessment.impact.completion=succeeded; \
 assessment.impact.description=Sendmail reported a $1; \
 assessment.impact.type=other; \
 assessment.impact.severity=low; \
 last;

#Jun 22 06:43:01 mail sendmail[5195]: i5MDgomk005195: AClermont-Ferrand-108-1-6-103.w81-49.abo.wanadoo.fr [81.49.192.103] did not issue MAIL/EXPN/VRFY/ETRN during connection to MTA
regex=([\w\-\.]+) \[([\d\.]+)\] did not issue MAIL/EXPN/VRFY/ETRN during connection to MTA; \
 classification(0).name=Mail server suspicious access; \
 id=3702; \
 revision=1; \
 classification(0).origin=vendor-specific; \
 assessment.impact.completion=failed; \
 assessment.impact.description=Lost connection from $1; \
 assessment.impact.type=other; \
 assessment.impact.severity=low; \
 source(0).node.name=$1
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 last;
