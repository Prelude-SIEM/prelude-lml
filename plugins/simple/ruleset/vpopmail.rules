# Jan 14 17:23:02 spotk vpopmail[28353]: vchkpw: vpopmail user not found toto@:127.0.0.1
# Feb 24 13:19:49 c vpopmail[9505]: vchkpw: vpopmail user not found temp@alexus.org:66.181.160.250
# Jan 14 17:30:13 spotk vpopmail[28425]: vchkpw: vpopmail user not found toto@:192.168.100.50

regex=vpopmail\[\d+\]: vchkpw: vpopmail user not found (\S+):([\d\.]+); \
 classification(0).name=vpopmail - no such user; \
 id=2100; \
 revision=1; \
 classification(0).origin=vendor-specific; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.severity=medium; \
 assessment.impact.description= Someone tried to log in to your POP3 server as a non-existant user '$1' but failed; \
  \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 source(0).service.protocol=tcp; \
 target(0).service.port=110; \
 target(0).service.protocol=tcp; \
 target(0).user.userid; \
 target(0).user.userid.name=$1; \
 last;

# Jan 14 17:24:54 spotk vpopmail[28359]: vchkpw: password fail xxx@spotk.net:127.0.0.1

regex=vpopmail\[\d+\]: vchkpw: password fail (\S+):([\d\.]+); \
 classification(0).name=vpopmail - bad password for this user; \
 id=2101; \
 revision=1; \
 classification(0).origin=vendor-specific; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.severity=medium; \
 assessment.impact.description= Someone tried to log in to your POP3 server as user '$1' but failed; \
  \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 source(0).service.protocol=tcp; \
 target(0).service.port=110; \
 target(0).service.protocol=tcp; \
 target(0).user.userid; \
 target(0).user.userid.name=$1; \
 last;
