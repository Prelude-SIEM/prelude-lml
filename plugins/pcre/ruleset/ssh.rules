##############################################
# Invalid (not existing) user tried to login #
##############################################

#Dec  9 18:48:29 itguxweb2 sshd[29536]: Failed password for illegal user ROOT from 12.34.56.78 port 2886
regex=Illegal user (\S+) from (\S+); \
 classification.text=SSH Remote login failed with an invalid user; \
 id=1904; \
 revision=1; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.description=Someone tried to login with the invalid user "$1" from $2; \
 source(0).node.address(0).category=ipv4-addr; \
 source(0).node.address(0).address=$2; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp; \
 target(0).user.category=os-device; \
 target(0).user.user_id(0).type=target-user; \
 target(0).user.user_id(0).name=$1; \
 last

##################################################################################
# User listed in DenyGroups or DenyUsers (sshd_config directives) tried to login #
##################################################################################

# No log sample; please submit
regex=User (\S+) not allowed because .*listed in (\w+); \
 classification.text=SSH Remote login failed with a denied user; \
 id=1905; \
 revision=1; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=user; \
 assessment.impact.description=User $1 failed to login because he is listed in $2; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp; \
 target(0).user.category=os-device; \
 target(0).user.user_id(0).type=target-user; \
 target(0).user.user_id(0).name=$1; \
 last

##################################################################
# Sshd did not receive the identification string from the client #
# (maybe a ssh server recognition)                               #
##################################################################

# No log sample; please submit
regex=Did not receive identification string from (.+); \
 classification.text=SSH Server recognition; \
 id=1906; \
 revision=2; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=recon; \
 assessment.impact.description=$1 is probably making a server recognition; \
 source(0).node.address(0).address=$1; \
 source(0).service.protocol=tcp; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp; \
 last

#########################################################################
# Forbidden root login                                                  #
# (directive PermitRootLogin and keyword "no" or "forced-commands-only" #
# of the sshd_config file)                                              #
#########################################################################

# No log sample; please submit
regex=ROOT LOGIN REFUSED FROM (\w+); \
 classification.text=SSH Remote root login forbidden; \
 id=1907; \
 revision=2; \
 assessment.impact.severity = medium; \
 assessment.impact.completion=failed; \
 assessment.impact.type=admin; \
 assessment.impact.description=Root tried to login while it is forbidden; \
 source(0).node.address(0).address=$1; \
 source(0).service.protocol=tcp; \
 target(0).service.port=22; \
 target(0).service.protocol=tcp; \
 target(0).user.category=os-device; \
 target(0).user.user_id(0).type=target.user; \
 target(0).user.user_id(0).name=root; \
 last
